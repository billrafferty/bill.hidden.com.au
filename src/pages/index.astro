---
import Layout from "../layouts/Layout.astro";
import Links from "../components/Links.astro";
import { Icon } from "astro-icon/components";

const linkModules = import.meta.glob("../links/*.md");
const links = await Promise.all(
  Object.values(linkModules).map(fn => fn())
) as Array<{
  frontmatter: {
    href: string;
    title: string;
    icon: string;
  };
  rawContent: () => string;
}>;
---

<Layout title="Links ðŸ”—">
  <main>
    <Icon name="logo"/>
    <h1 class="instructions">
      Bill's top {links.length} Links <span class="text-gradient">list</span>
    </h1>
      <ul role="list" class="link-Links-grid">
        {
          links.map((link) => {
            // Show QR codes for phone, email, and web links
            const showQR = link.frontmatter.href.startsWith('tel:') || 
                          link.frontmatter.href.startsWith('mailto:') ||
                          link.frontmatter.href.startsWith('https://') ||
                          link.frontmatter.href.startsWith('http://');
            
            return (
              <Links
                href={link.frontmatter.href}
                title={link.frontmatter.title}
                body={link.rawContent()}
                icon={link.frontmatter.icon}
                showQR={showQR}
                qrSize={100}
              />
            );
          })
        }
      </ul>
    <p class="instructions">Please click any link above... <em>obvs!</em><br>
      <a href="#top" class="back-to-top">â†‘ Back to top</a></p>

  </main>

  <style>
    main {
      margin: auto;
      border-radius: 8px;
      padding: 1rem;
      margin-top: 1rem;
      min-width: 200px;
      max-width: calc(100% - 2rem);
      color: white;
      font-size: 1rem;
      line-height: 1.6;
