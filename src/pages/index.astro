---
import Layout from "../layouts/Layout.astro";
import Links from "../components/Links.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Welcome to Astro.">
  <main>
    <Icon name="logo" />
    <h1>ðŸ‘‹ Welcome to my <span class="text-gradient">links page</span></h1>
    <p class="instructions">
      To get started, open the directory <code>src/pages</code> in your project.<br
      />
      <strong>Code Challenge:</strong> Tweak the "Welcome to Astro" message above.
    </p>
    <ul role="list" class="link-Links-grid">
      <Links
        href="https://github.com/billrafferty"
        title="Github Profile page"
        body="Learn how Astro works and explore the official API docs."
        icon="simple-icons:github"
      />
      <Links
        href="https://twitter.com/bulltwitting"
        title="@bulltwitting"
        body="I don't want to call it bloody X"
        icon="simple-icons:twitter"
      />
      <Links
        href="https://hidden.online"
        title="Enter the Matrix"
        body="Follow the white rabit..."
        icon="simple-icons:htop"
      />
      <Links
        href="mailto:bill@hidden.com.au"
        title="bill@hidden.com.au"
        body="Email me ðŸ“¬"
        icon="simple-icons:gmail"
      />
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    text-shadow: 2px 1px 15px rgba(16, 237, 8, 0.3);
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    text-shadow: 2px 1px 15px rgba(16, 237, 8, 0.4);
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-Links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
  [data-icon="logo"] {
    font-size: 6rem;
    color: var(--brand-color);
    margin-left: auto;
    margin-right: auto;
  }
</style>
