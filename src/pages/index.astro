      background-attachment: fixed;
      background-size: cover;
    }
    .astro-a {
      position: absolute;
      top: -32px;
      left: 50%;
      transform: translatex(-50%);
      width: 220px;
      height: auto;
      z-index: -1;
    }
    h1 {
      font-size: 1.2rem;
      font-weight: 700;
      line-height: 1;
      text-align: center;
      margin-bottom: 1em;
      text-shadow: 2px 1px 15px rgba(16, 237, 8, 0.3);
    }
    .text-gradient {
      background-image: var(--accent-gradient);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 400%;
      background-position: 0%;
      text-shadow: 2px 1px 15px rgba(16, 237, 8, 0.4);
    }
    .instructions {
      text-align: center;
      margin: 1rem;
      border: 1px solid rgba(var(--accent-light), 25%);
      background: linear-gradient(
        rgba(var(--accent-dark), 66%),
        rgba(var(--accent-dark), 33%)
      );
      padding: 1rem;
      border-radius: 8px;
    }
    .instructions code {
      font-size: 0.8em;
      font-weight: bold;
      background: rgba(var(--accent-light), 12%);
      color: rgb(var(--accent-light));
      border-radius: 4px;
      padding: 0.3em 0.4em;
    }
    .instructions strong {
      color: rgb(var(--accent-light));
    }
    .link-Links-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
      gap: 1rem;
      padding: 0;
    }
    
    /* Force 2 columns on all mobile devices */
    @media screen and (max-width: 768px) {
      .link-Links-grid {
        grid-template-columns: 1fr 1fr !important;
        grid-auto-flow: row !important;
        gap: 0.25rem !important;
      }
      
      .link-Links-grid .link-card {
        min-width: 0 !important;
        width: 100% !important;
      }
      
      .link-Links-grid .link-card > a {
        padding: 0.75rem !important;
        min-height: 180px !important;
      }
      
      .link-Links-grid .qr-code-container {
        margin: 0.5rem 0 !important;
        padding: 0.5rem !important;
      }
    }
    [data-icon="logo"] {
      font-size: 6rem;
      color: var(--brand-color);
      margin-left: -1.5rem;
      margin-right: auto;
      padding: 10px;
      float: left;
      top: 1rem;
      position: absolute;
    }
    @media screen and (max-width: 475px) {
      [data-icon="logo"] {
        position: relative;
        float: none;
        display: block;
        margin-left: auto;
        margin-right: auto;
      }
      h1 {
        font-size: 1.5rem;
      }
      
    }
    
    .back-to-top {
      display: inline-block;
      color: rgb(var(--accent-light));
      text-decoration: none;
      padding: 0.5rem 1rem;
      border: 1px solid rgba(var(--accent-light), 0.3);
      border-radius: 6px;
      background: rgba(var(--accent-dark), 0.2);
      transition: all 0.3s ease;
      font-weight: 500;
      margin-top: 1rem;
    }
    
    .back-to-top:hover {
      background: rgba(var(--accent-light), 0.1);
      border-color: rgba(var(--accent-light), 0.6);
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(var(--accent-light), 0.2);
    }
  </style>
</Layout>
